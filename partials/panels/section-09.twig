{% set articleCount = 0 %}
{% set totalArticlesHalf = articles | length  / 2 - 1 %}

<div class="row" data-section="09">
    <div class="col-12">
        <div class="u-generic-topBorder "></div>
        <div class="c-page-head c-page-head-xs">
            <div class="u-heading__large u-heading__large-xs u-pr--6" {% if labelColor != '' %} style="color:{{labelColor}}; border-bottom-color: {{labelColor}}" {% endif %}>{{title}}</div>
            {% if linkShow %}
                <a href="{{link}}" class="c-page-head__link">View all</a>
            {% endif %}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-6">
        {% for i in 0..totalArticlesHalf %}
         {{this.render('../_single-article.twig', {
            article: articles[articleCount], 
            position: (articleCount+1),
            feedBlogGuid: articles[articleCount]['requestedBlog']['guid'],
            containerClass: "card-8-mobile card-8-tablet card-8-desktop",
            imageSize: {width: 95, height: 130},
            imageSizes: {
                "mobile": {
                    width: 95, height: 130
                },
                "mobileLrg": {
                    width: 95, height: 130
                },
                "tablet": {
                    width: 95, height: 130
                }
            },
            swap : 'false',
            template: 'feature',
            url: altUrls[0] is defined ? networkData.defaultBlogUrl ~ altUrls[0] : ''
        }) | raw}}
        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
        {% endfor %}
        
    </div>

    <div class="col-12 col-md-6">
        {% for i in 0..totalArticlesHalf %}
         {{this.render('../_single-article.twig', {
            article: articles[articleCount], 
            position: (articleCount+1),
            feedBlogGuid: articles[articleCount]['requestedBlog']['guid'],
            containerClass: "card-8-mobile card-8-tablet card-8-desktop",
            imageSize: {width: 95, height: 130},
            imageSizes: {
                "mobile": {
                    width: 95, height: 130
                },
                "mobileLrg": {
                    width: 95, height: 130
                },
                "tablet": {
                    width: 95, height: 130
                }
            },
            swap : 'false',
            template: 'feature',
            url: altUrls[3] is defined ? networkData.defaultBlogUrl ~ altUrls[3] : ''
        }) | raw}}
        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
        {% endfor %}
    </div>
</div>