{% set articleCount = 0 %}
{% set cardIndex = 0 %}

{% set acmeClasses = 'acme-col-12 acme-col-sm-6 acme-col-md-6 acme-col-lg-3' %}
{% set cardClasses = 'acme-card-3-mobile acme-card-3-tablet acme-card-3-desktop' %}



<div class="acme-row c-section-head">
    <div class="acme-col-12">
        <a href="{{link}}">
            <div class="c-section-head__title">{{title}}</div>
        </a> 
        <div class="c-section-head__rule"></div>
    </div>
</div>

<div class="acme-row">
    {% for i in 0..(articles | length - 1) if articles[i] %}
        <div class="{{acmeClasses}}">
            {{this.render('../_single-card.twig', {
                article: articles[articleCount], 
                position: (articleCount+1),
                cardType: "acme-",
				template: "staff",
                imageSize: {width: 285, height: 192},
                contentType: contentType,
                containerClass: cardClasses
            }) | raw}}
            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
        </div>
    {% endfor %}
</div>

<div class="u-margin-bottom-60"></div>