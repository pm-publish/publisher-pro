{% set articleCount = 0 %}
{% set cardIndex = 0 %}


<div class="row" data-section="02">
    <div class="col-12">
        <div class="u-generic-topBorder "></div>
        <div class="c-page-head c-page-head-xs">
            <div class="u-heading__large u-heading__large-xs u-pr--6">{{title}}</div>
            {% if LinkHide is defined and LinkHide is not empty %}
                <a href="{{link}}" class="c-page-head__link">View all</a>
            {% endif %}
        </div>
    </div>
</div>


<div class="row">
    <div class="col hm-sec1">
        <div class="c-cards-container c-cards-container-xs bottom-border">
            <div class="row">
                <div class="col-12 col-lg-3 left-border hm-sec1_row_2_c1">
                    {% for i in 4..5 if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                    article: articles[articleCount],
                    position: (articleCount+1),
                    imageSize: {width: 306, height: 185},
                    containerClass: "card-2-mobile card-2-tablet card-2-desktop card-2--noDescription
                    card--verticalMulti card--verticalMulti-xs",
                    timeSuppress: timeSuppress
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% endfor %}
                </div>
                <div class="col-12 col-lg-6 left-border hm-sec1_row_2_c2">
                    {{this.render('../_single-article.twig', {
                    article: articles[articleCount],
                    position: (articleCount+1),
                    imageSize: {width: 635, height: 450},
                    containerClass: "card-2-mobile card-2-tablet card-5-desktop",
                    timeSuppress: timeSuppress
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                </div>
                <div class="col-12 col-lg-3 left-border hm-sec1_row_2_c3">
                    {% for i in 6..7 if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                    article: articles[articleCount],
                    position: (articleCount+1),
                    imageSize: {width: 306, height: 185},
                    containerClass: "card-2-mobile card-2-tablet card-2-desktop card-2--noDescription
                    card--verticalMulti card--verticalMulti-xs",
                    timeSuppress: timeSuppress
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>