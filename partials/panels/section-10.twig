{% set eventsCount = 0 %}
{% set cardIndex = 0 %}
{% set events = _Event.getEvents({'limit' : 4, 'offset' : 0, 'excludeMetaInfo' : 1, "upcomingDate": date() | date("Y-m-d")}) %}

<div class="row" data-section="10">
    <div class="col-12">
        <div class="u-generic-topBorder "></div>
        <div class="c-page-head c-page-head-xs">
            <div class="u-heading__large u-heading__large-xs u-pr--6">{{title}}</div>
            {% if linkShow %}
                <a href="{{link}}/event-calendar" class="c-page-head__link" data-count="{{events | length }}"  data-date="{{date() | date('Y-m-d') }}">>See more events</a>
            {% endif %}
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="c-cards-container c-cards-container-xs">
            <div class="row">
                {% for i in 0..3 %}
                    {% if events[i] is defined %}
                        <div class="col-12 col-lg-3 left-border">
                            {{this.render('../_single-event-list.twig', {
                                event: events[i], 
                                imageSuppress: 'true',
                                swap : 'false',
                                containerClass: "event-card-3-mobile event-card-3-tablet event-card-3-desktop"
                            }) | raw}}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>